        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <%a,b=@about.split(';')%>
                    <h2 class="intro-text text-center"><%=a%>
                        <strong><%=b%></strong>
                    </h2>
                    <hr>
                    <%= @article.description.html_safe %>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="box">
                <div class="col-lg-12">
                    <hr>
                    <%a,b=@ways.split(';')%>
                    <h2 class="intro-text text-center"><%=a%>
                        <strong><%=b%></strong>
                    </h2>
                    <hr>
                    <div class="row">
                        <% @count = 0; About.all.each do |about| %>
                        <%= @count>=3? (@count=0;'</div><div class="row">'.html_safe) : (@count+=1;'') %>
                        <div class="col-sm-4 text-center">
                            <%= image_tag about.image.url, alt: about.title, class: "img-responsive" %>
                            <%a,b=about.title.split(';')%>
                            <h3><%=a%>
                                <small><%=b%></small>
                            </h3>
                        </div>
                        <%end%>
                    </div>
                </div>
                <div class="clearfix"></div>
            </div>
        </div>